<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.controllers.MainController" prefWidth="800" prefHeight="600"
            minWidth="800" minHeight="600">
  
    <!-- upload container -->
    <AnchorPane fx:id="uploadContainer" prefWidth="220" prefHeight="260" 
                AnchorPane.topAnchor="70" AnchorPane.leftAnchor="20">
        <!-- upload title: stretches full width and centers text -->
        <Label text="Upload File" fx:id="containerTitle"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               alignment="CENTER" style="-fx-text-alignment: center;" prefHeight="50"/>
        <!-- VBox holding buttons -->
        <VBox alignment="CENTER" spacing="10" prefWidth="220" prefHeight="100" AnchorPane.topAnchor="80">
            <Button text="Select File" fx:id="selectFileButton">
                <VBox.margin>
                    <Insets top="10" right="0" bottom="20" left="0"/>
                </VBox.margin>
            </Button>
            <Button text="Solve" fx:id="solveButton"/>
        </VBox>
    </AnchorPane>
    
    <!-- save container -->
    <AnchorPane fx:id="saveContainer" prefWidth="220" prefHeight="260" 
                AnchorPane.topAnchor="440" AnchorPane.leftAnchor="20">
        <!-- save title: stretches full width and centers text -->
        <Label text="Save" fx:id="containerTitle"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               alignment="CENTER" style="-fx-text-alignment: center;" prefHeight="50"/>
        <!-- VBox holding buttons -->
        <VBox alignment="CENTER" spacing="10" prefWidth="220" prefHeight="100" AnchorPane.topAnchor="80">
            <Button text="Save As Image" fx:id="saveImageButton">
                <VBox.margin>
                    <Insets top="10" right="0" bottom="20" left="0"/>
                </VBox.margin>
            </Button>
            <Button text="Save As Text" fx:id="saveTextButton"/>
        </VBox>
    </AnchorPane>
    
    <!-- back button -->
    <Button text="Back" onAction="#handleBackButton" fx:id="back_button"
            AnchorPane.leftAnchor="9" AnchorPane.bottomAnchor="9"/>
    
    <!-- reset button -->
    <Button text="Reset" fx:id="reset_button"
            AnchorPane.rightAnchor="9" AnchorPane.bottomAnchor="9"/>
    
</AnchorPane>